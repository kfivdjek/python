from tkinter import *   // библиотека для работы с графичесиким интерфейсом
import random   // библиотека для выбора случайных элементов
from tkinter.messagebox import *  // модуль в tkinter, который предоставляет функции для отображения диалоговых окон с сообщениями, предупреждениями, вопросами
root = Tk()
root.title('Крестики Нолики')
root.geometry('300x295+620+180')  // создание главного окна, заголовка и размеров
games=[] // список хранения кнопок игрового поля
choice = 0 // отпределяет кто начнёт
combinations = [(0, 1, 2), (3, 4, 5), (6, 7, 8), (0, 3, 6), (1, 4, 7), (2, 5, 8), (0, 4, 8), (2, 4, 6)] // выйгрышние комбинации
def new_game():  // инициализация новой игры
    global run_game, win, condition, games, button1 //   используем их для контроля состояния игры и кнопок. 
    if games!=[]:  
        for i in range(3):
            for j in range(3): games[i][j].grid_forget() // Проверяем, есть ли уже существующая игра. Если список games не пуст, это значит, что игра уже была начата.
        button1.grid_forget()
        games=[]
        return fig() //Здесь мы также убираем кнопку "Новая игра" и очищаем список games. Функция fig() вероятно возвращает интерфейс к начальному состоянию или настраивает его.
    run_game = True // означает что игра продолжается
    condition = [None] * 9 // означает проедставляет список из 9 клеток и показывает что игроки не сделали ход
    win = None // означает что на данный момент нету победителя
    games = [] // список игр очищен
    root.columnconfigure(index=2,weight=50) // используется для управления распределением пространства в интерфейсе. Она указывает, что столбец с индексом 2 (где бот будет выполнять свои ходы) будет занимать 50% свободного пространства.
    for i in range(3): // отвечает за строки
        row = []
        for j in range(3): //   отвечает за столбцы.  В результате создаётся игровое поле размера 3x3 в виде кнопок.
            button = Button(root, text="", width=10, height=5, command=lambda row=i, col=j: click(row, col)) //Этот параметр устанавливает функцию, которая будет вызываться при нажатии на кнопку. Используется lambda, чтобы зафиксировать значения row и col в момент создания кнопки.
            button.grid(row=i, column=j,sticky='ew') //- button.grid(row=i, column=j, sticky='ew'): //Метод grid() используется для размещения кнопки в сетке по координатам (i, j). Параметр sticky='ew' позволяет кнопке растягиваться по горизонтали, что улучшает внешний вид интерфейса.
            row.append(button) // Кнопка добавляется в список row, который временно хранит кнопки текущей строки.
        games.append(row) // После завершения внутреннего цикла, вся строка с кнопками добавляется в основной список games
    button1 = Button(root,font='9', text="Новая игра", command=new_game)
    button1.grid(row = 3, column=0,columnspan=3, sticky='nswe')
    if choice == 0:bot_move() // Создается кнопка для начала новой игры:
def add_x(row, col): 
    games[row][col]['text'] = 'X'
    games[row][col]['state'] = 'disabled'
def add_o(row, col):
    games[row][col]['text'] = 'O'
    games[row][col]['state'] = 'disabled' //замена текста на кнопках на "X" или "O",отключение кнопки , чтобы после хода игрока на неё нельзя было нажать еще раз.
def click(row, col): //эта функция управляет логикой, связанной с кликами на кнопки (ячейки) игрового поля.
    global choice // глобальная переменная, определояющая что выбрал игрок x или 0
    if run_game:
        index = row * 3 + col # Вычисление индекса клетки
        if condition[index] is None: # Проверяем, свободна ли клетка
            if choice == 1: # Если игрок выбрал "X"
                condition[index] = 1 # Обновляем состояние для "X"
                add_x(row, col)  # Добавляем "X" на кнопку
                if winner():  # Проверяем на победу
                    end_game()# Завершение игры, если игрок выиграл
                else:  # Если победы нет
                    bot_move() # Ход бота
                    if winner():# Проверяем на победу снова
                        end_game() # Завершение игры, если бот выиграл
            elif choice == 0:  # Если игрок выбрал "O"
                condition[index] = 0 # Обновляем состояние для "O"
                print(condition) # Вывод текущего состояния на консоль
                add_o(row, col)  # Добавляем "O" на кнопку
                if winner():end_game()  # Проверяем на победу  # Завершение игры, если игрок выиграл
                else:# Если победы нет
                    bot_move() # Ход бота
                    if winner():end_game()  # Проверяем на победу снова # Завершение игры, если бот выиграл
    else:new_game()  # Если игра не идет # Запускаем новую игру
def bot_move():   // Эта функция реализует логику, позволяющую боту принимать решения о том, куда сделать ход на основе текущего состояния игрового поля.
    index = None // Если бот найдет подходящую клетку, index изменится на соответствующий индекс.
    for i in combinations: // это список всех возможных выигрышных комбинаций
        variants = (([condition[i[0]], condition[i[1]], condition[i[2]]]))
        if variants.count(1-choice) == 2 and variants.count(None) == 1:
            index = i[variants.index(None)] // это даёт боту зпнять клетку, которая может привезти к выйгрышу
            break
    if index is None: // пока индекс равен пустой клетке, бот ищет выйгрышный вариант.
        for i in combinations: // Цикл перебирает все возможные выигрышные комбинации, представленные в массиве combinations.
            variants = (([condition[i[0]], condition[i[1]], condition[i[2]]])) // - variants — это список, состоящий из текущих состояний трех клеток, которые связаны с текущей комбинацией в i.
            if variants.count(choice) == 2 and variants.count(None) == 1: //из-за этой строки бот проверит есть ли две клетки занятые им, если да то он сделает нужный ход.
                index = i[variants.index(None)]// это даёт боту зпнять клетку, которая может привезти к выйгрышу
                break
    if index is None:
        for i in combinations:
            variants = (([condition[i[0]], condition[i[1]], condition[i[2]]]))
            if variants.count(1-choice) == 1 and variants.count(None) == 2:
                index = i[variants.index(None)]
                break
    if index is None: // пока индекс равен пустой клетке, бот ищет выйгрышный вариант.
        if condition[4] is None:
            index = 4 //проверяется, свободна ли центральная клетка (индекс 4) игрового поля. Если да, то бот выбирает её.
    if index is None: // если центр всё ещё равное none, то ...
        empty_indexes = [] // записываем интексы клеток, которые свободны для хода
        for i in range(0, 9, 2): //Этот цикл перебирает индексы от 0 до 8 с шагом 2. То есть, он будет итерироваться по следующим индексам: 0, 2, 4, 6, 8.
            if condition[i] is None: // проверяем на пустоту клетку индекса
                empty_indexes.append(i) // если клетка пустая, то i добавляется в список empty_indexes
        if empty_indexes: // если список пумстой
            index = random.choice(empty_indexes) // то выбирает любой элемент из списка.
    if index is None:
        empty_indexes = []  // записываем интексы клеток, которые свободны для хода
        for index, el in enumerate(condition): // зпускает цикл перебора элементов списка condition, enumerate(condition)  создает пары, в которых есть номер ячейки (индекс) и значение, которое находится в этой ячейке. 
            if el is None:  Эта строка проверяет, является ли текущий элемент el пустым, если да то ячейка на игр. поле свободна
                empty_indexes.append(index), если да, то добавляем номер этой ячейки в список empty_indexes
        if empty_indexes: // записываем интексы клеток, которые свободны для хода
            index = random.choice(empty_indexes)  // то выбирает любой элемент из списка.
    condition[index] = 1-choice // берем индекс, по которому бот сделал свой ход, и записываем в массив condition значение 1 - choice.
    row = index // 3   // С помощью index // 3 мы находим номер строки в котоорой находится клетка
    col = index % 3   // С помощью index % 3 мы находим номер столбца в котором находится клетка
    if choice==0: add_x(row, col) //Если choice равно 0, это значит, что бот добавляет "X" на поле, вызывая функцию add_x, которая принимает строку и столбец, где был сделан ход.
    else: add_o(row, col) //Если choice равно 1, то добавляется "O" с помощью функции add_o.
def winner(): //функция которая проверяет есть ли победитель в игре
    global win // функция исп. глобальную переменную win, хранящую инфу о результате
    variants = [] // сознаём пустой список
    for i in combinations: variants.append([condition[i[0]], condition[i[1]], condition[i[2]]]) // для каждой комюинации берем соответствующие элементы из списка condition и добавляем их в variants. 
    if [choice] * 3 in variants:win = 'Ты ПОБЕДИЛ!' / если в variants комбинация из 3 одинаковых значений, то win получает значение  'Ты ПОБЕДИЛ!' 
    elif [1-choice] * 3 in variants:win = 'Бот Выиграл' / если у бота такоя комбинация то выйграл он
    elif None not in condition:win = 'Ничья' /если ничего не сработало и нет пустых клеток, то ничья
    return win // функция информирует о результате игры
def end_game(): // функция отвечающая за конец игры
    global run_game, games //функция будет использовать глобальные переменные run_game (для контроля состояния игры) и games (для управления элементами интерфейса игры).
    run_game = False // игра не будет продолжаться
    for row in games:
        for button in row:button['state'] = 'disabled' // игрок больше не может нажимать на кнопки
    showinfo("Игра окончена", win) // сообщение о завершение игры
    for i in range(3):
        for j in range(3):games[i][j].grid_forget() // очистка экрана после игры.
    button1.grid_forget() // убираем button1, для начала новой игры
    games=[] // создание пустого списка для новой игры 
    fig()
def choose_x():
    global choice
    choice = 1 // игрок выбирает x
    new_game() // начало новой игры
def choose_o():
    global choice
    choice = 0 // то же самое но для 0
    new_game() // начало новой игры
def fig(): // создание интерфейса для выбора фигуры
    root.columnconfigure(index=0,weight=50) //Устанавливая weight, мы задаем, как будут распределяться свободные места между столбцами. 
    root.columnconfigure(index=1,weight=50) 
    root.columnconfigure(index=2,weight=0) //первый и второй столбцы получат больше места (вес 50), а третий столбец не будет получать дополнительного пространства (вес 0).
    Label(root, text="Выберите фигуру:",font='9').grid(row=0, column=0, columnspan=2)// создаётся надпись о выьоре фигуры в два столбца  
    Button(root, text="X", font='9', command=choose_x).grid(row = 1, column = 0, sticky='ew',) // создание кнопки x
    Button(root, text="O", font='9', command=choose_o).grid(row = 1, column = 1, sticky='ew') // создание кнопки 0
fig() // для отображения символа на экране
root.mainloop() // Эта команда запускает основной цикл обработки событий tkinter, который поддерживает окно активным и ожидает взаимодействия пользователя 
